#include <stdio.h>
#include <conio.h>

void main(void){
	char c;
	int kol = 1;
	FILE *f1, *f2;
	f1 = fopen("source_file.txt", "r");
	f2 = fopen("output_file.txt", "w");
	while((c = fgetc(f1)) != EOF){
		if(c == '.'){
			if(kol == 1){
				fputc(c,f2);
				kol = 0;
			}}
		else{
			if(c != '.')
            	kol = 1;
			fputc(c,f2);
        }
	}
	fclose(f1);
	fclose(f2);
}
